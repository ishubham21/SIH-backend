{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "rm -rf ./dist && tsc",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "format": "prettier --write \"**/*.{js,ts}\"",
    "lint": "eslint \"**/*.{js,ts}\" --quiet",
    "lint:fix": "eslint \"**/*.{js,ts}\" --fix",
    "kill": "sudo kill -9 `sudo lsof -t -i:5432`",
    "compose:db-up": "sudo docker-compose -f docker-compose.db.yaml up -d",
    "compose:db-down": "sudo docker-compose -f docker-compose.db.yaml down --volumes",
    "compose:up": "sudo docker-compose up -d",
    "compose:down": "sudo docker-compose down --volumes",
    "docker:build": "docker build -t sih-backend .",
    "list:containers": "sudo docker ps",
    "list:images": "sudo docker images",
    "db:push": "npx prisma db push",
    "db:migrate": "npx prisma migrate dev --name \"init\"",
    "db:deploy": "npx prisma migrate deploy",
    "db:init": "npm run db:migrate && npm run db:deploy",
    "db:reset": "npx prisma migrate reset",
    "prisma:generate": "npx prisma generate",
    "prisma:studio": "npx prisma studio",
    "seed:cognitive": "nodemon src/seeds/cognitive.seed.ts"
  },
