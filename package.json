{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "rm -rf ./dist && tsc",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "format": "prettier --write \"**/*.{js,ts}\"",
    "lint": "eslint \"**/*.{js,ts}\" --quiet",
    "lint:fix": "eslint \"**/*.{js,ts}\" --fix",
    "kill": "sudo kill -9 `sudo lsof -t -i:5432`",
    "compose:db-up": "sudo docker-compose -f docker-compose.db.yaml up -d",
    "compose:db-down": "sudo docker-compose -f docker-compose.db.yaml down --volumes",
    "compose:up": "sudo docker-compose up -d",
    "compose:down": "sudo docker-compose down --volumes",
    "docker:build": "echo \"Publishes the docker image from Dockerfile on contaniner registry\" && docker build -t sih-backend .",
    "list:containers": "sudo docker ps",
    "list:images": "sudo docker images",
    "prisma:generate": "echo \"Generates and install @prisma/client- NOT REQUIRED if using prisma:migrate\" && npx prisma generate",
    "prisma:db-push": "echo \"Applies schema directly to the database - USED IN DEVELOPMENT as an alternative to prisma:migrate\" && npx prisma",
    "prisma:migrate": "echo \"Create migrations from your Prisma schema, apply them to the database, generate @prisma/client - A NEW VERSION WILL BE CREATED - PREVENTS DATA LOSS UNLIKE db:push - USED after all the changes are on a relative stable state using db:push\" && npx prisma migrate dev --name \"init\"",
    "prisma:deploy": "echo \"No shadow DB required for this - PROD USE\" && npx prisma migrate deploy",
    "prisma:studio": "npx prisma studio",
    "db:init": "npm run prisma:migrate && npm run prisma:deploy",
    "db:reset": "npx prisma migrate reset"
  },
  "keywords": [],
  "author": "ishubham21",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^4.2.0",
    "bcrypt": "^5.0.1",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "helmet": "^5.1.1",
    "http-errors": "^2.0.0",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.18.6",
    "@tsconfig/node16": "^1.0.3",
    "@types/bcrypt": "^5.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/helmet": "^4.0.0",
    "@types/http-errors": "^1.8.2",
    "@types/jest": "^28.1.6",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^18.6.4",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "@vercel/node": "^2.5.6",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "jest": "^28.1.3",
    "prisma": "^4.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  }
}
